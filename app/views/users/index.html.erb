<html>
  <main>
    <div class="container px-5 px-sm-0">
      <div class = "row">
        <div class = "col-md-3">
          <h2>User info</h2>
            <% if @book.errors.any? %>
              <%= @book.errors.count %>error prohibited this obj from being saved
              <ul>
                <% @book.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            <% end %>
            <div class = "ing">
              <%= image_tag @user.get_profile_image %>
            </div>
            <table class = "table">
              <%= form_with model: @user do |f| %>
              <tbody>
                <tr>
                  <th>name</th>
                  <th><%= @user.name %></th>
                </tr>
                <tr>
                  <th>introduction</th>
                  <th><%= @user.introduction %></th>
                </tr>
              </tbody>
              <% end %>
            </table>
            <div class="row">
              <div class="btn btn-outline-secondary btn-block">
                <%= link_to edit_user_path(@user.id) ,method: :get do%>
                  <i class="fas fa-user-cog"></i>
                <% end %>
              </div>
            </div>
          <h2 class="mt-3">New book</h2>
          <%= form_with model: Book.new do |f| %>
            <label for="book_title">Title</label><br>
            <%= f.text_field :title %><br>
            <label for="book_opinion">Opinion</label><br>
            <%= f.text_area :body %><br>
            <%= f.submit 'Create Book' %>
          <% end %>
        </div>

        <div class="col-md-8 offset-md-1">
          <h2>Users</h2>
          <table class='table'>
            <thead>
              <tr>
                <th>image</th>
                <th>name</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
              <tr>
                <th><%= image_tag user.get_profile_image %></th>
                <th><%= user.name %><th>
                <th><%= link_to"Show",user_path(user.id) %></th>
             </tr>
             <% end %>
            </tbody>
         </table>
        </div>
      </div>
    </div>
  </main>
</html>