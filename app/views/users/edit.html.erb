<html class="fontawesome-i2svg-active fontawesome-i2svg-complete">
  <main>
    <div class="container">
      <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
          <h2>User   info</h2>
          <% if @user.errors.any? %>
            <%= @user.errors.count %>error prohibited this obj from being saved
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>
          <%= form_for(@user, url: user_path(current_user.id)) do |f| %>
            <div class="form-group">
              <label for="user_name">Name</label></br>
                <%= f.text_field :name %>
            </div>
            <div class="form-group">
              <label for="user_image">Image</label></br>
                <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
            </div>
            <div class="form-group">
              <label class="user_introduction">introduction</label></br>
                <%= f.text_area :introduction %>
            </div>
              <%= f.submit 'Update User',class: "btn btn-secondary" %>
          <% end %>
        </div>
      </div>
    </div>
  </main>
</html>