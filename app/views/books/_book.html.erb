    <div class="container px-5 px-sm-0">
      <div class = "row">
        <div class = "col-md-3">
          <h2>User info</h2>
            <div class = "ing">
              <% if @book.profile_image.attached? %>
                <%= image_tag @book.profile_image.image, size: "100x100" %>
              <% else %>
                <%= image_tag 'default-image', size: "100x100" %>
              <% end %>
            </div>

            <table class = "table">
              <%= form_with model: @user do |f| %>
              <tbody>
                <tr>
                  <th>name</th>
                  <th><%= @user.name %></th>
                </tr>
                <tr>
                  <th>introduction</th>
                  <th><%= @user.introduction %></th>
                </tr>
              </tbody>
              <% end %>
            </table>


              <%= link_to"edit",edit_user_path(@user.id)%>


          <h2>New book</h2>

          <%= form_with model: Book.new do |f| %>
            <h4>Title</h4>
            <%= f.text_field :title %>

            <h4>Opinion</h4>
            <%= f.text_area :body %>

            <%= f.submit 'Create Book' %>
          <% end %>
        </div>