<html class ="fontawesome-i2svg-active fontawesome-i2svg-complete">
  <main>
    <div class="container px-5 px-sm-0">
      <div class = "row">
        <div class = "col-md-3">
          <h2>User info</h2>
            <div class = "ing">
              <% if @user.profile_image.attached? %>
                <%= image_tag @user.profile_image.image, size: "80x80" %>
              <% else %>
                <%= image_tag 'default-image', size: "80x80" %>
              <% end %>
            </div>
            <table class = "table">
              <%= form_with model: @user do |f| %>
              <tbody>
                <tr>
                  <th>name</th>
                  <th><%= @user.name %></th>
                </tr>
                <tr>
                  <th>introduction</th>
                  <th><%= @user.introduction %></th>
                </tr>
              </tbody>
              <% end %>
            </table>
              <%= link_to"edit",edit_user_path(@user.id)%>
          <h2 class="mt-3">New book</h2>
          <%= form_with model: Book.new do |f| %>
            <h4>Title</h4>
            <%= f.text_field :title %>
            <h4>Opinion</h4>
            <%= f.text_area :body %>
            <%= f.submit 'Create Book' %>
          <% end %>
        </div>
        
        <div class ="col-md-8 offset-md-1">
          <h2>Books</h2>
          <table class="table table-hover table-inverse">
            <thead>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </thead>
            <tbody>
              <% @books.each do |book| %>
                <tr>
                  <td></td>
                  <td><%= link_to book.title, book_path(book.id) %></td>
                  <td><%= book.body %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </main>
</html>